<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/ll_duration"
            android:background="@android:color/holo_blue_light"
            >
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="10dp"
                      android:id="@+id/tv_duration">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_duration_hour"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="00"
                      android:textSize="40sp"
                      android:textStyle="bold"
                      android:textColor="@android:color/white"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text=":"
                      android:textSize="40sp"
                      android:textStyle="bold"
                      android:textColor="@android:color/white"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_duration_min"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="00"
                      android:textSize="40sp"
                      android:textStyle="bold"
                      android:textColor="@android:color/white"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text=":"
                      android:textSize="40sp"
                      android:textStyle="bold"
                      android:textColor="@android:color/white"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_duration_second"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="00"
                      android:textSize="40sp"
                      android:textStyle="bold"
                      android:textColor="@android:color/white"
                    />

        </LinearLayout>
        <!--        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentTop="true"
                        android:text="00:00:00"
                        android:id="@+id/tv_duration"


                        android:textColor="@android:color/white"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>-->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="时长"
                android:id="@+id/textView5"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:layout_alignBottom="@+id/tv_duration"
                android:layout_toRightOf="@+id/tv_duration"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/tv_duration"
                android:layout_centerHorizontal="true"
                android:text="GPS"
                android:textColor="@android:color/white"
                android:id="@+id/tv_gps"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="||||"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_gps"
                android:layout_alignBottom="@+id/tv_gps"
                android:textColor="@android:color/white"
                android:id="@+id/tv_gps_intension"/>

    </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@android:color/white"

            >

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/ll_cal"
                      android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="卡路里(kcal)"
                    android:id="@+id/tv_kcal_title"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center_horizontal"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_kcal_content"
                    android:textColor="@android:color/holo_blue_dark"
                    />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/ll_speed"
                      android:layout_gravity="center_horizontal"
                      android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="配速(km/h)"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_speed_title"
                    android:textColor="@android:color/holo_blue_dark"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00:00"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/tv_speed_content"/>
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/ll_distance"
                      android:layout_gravity="center_horizontal"
                      android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="距离(km)"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_distance_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="000.00"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/tv_distance_content"/>
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_weight="1">
        <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                />
        <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bt_start"
                android:textColor="@android:color/white"
                android:id="@+id/bt_start"
                android:background="@color/bt_start_color"
                android:layout_alignParentBottom="true"
                />

        <LinearLayout
                      android:id="@+id/ll_end_goon"
                      android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:orientation="horizontal"
                      android:layout_alignParentBottom="true"
                      android:visibility="invisible">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="结束"
                    android:textColor="@android:color/white"
                    android:id="@+id/bt_end"
                    android:background="@color/holo_red_dark"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="继续"
                    android:textColor="@android:color/white"
                    android:id="@+id/bt_goon"
                    android:background="@color/holo_green_dark"
                    />
        </LinearLayout>


        <com.sports.iTrack.SliderRelativeLayout
                android:id="@+id/slider_layout"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/bt_start_color"
                android:visibility="invisible">
            <!-- android:background="@drawable/step2_tip_2"-->

            <!-- slider img -->
            <TextView android:id="@+id/slider_icon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="80dip"
                      android:drawableTop="@drawable/lock">
            </TextView>

            <!-- Arrow Animation -->
            <ImageView android:id="@+id/getup_arrow"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="40dip"
                       android:layout_toRightOf="@id/slider_icon"
                       android:layout_centerVertical="true"
                       android:background="@anim/slider_tip_anim">
            </ImageView>

            <!-- hint_unlock -->
            <!--<TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@id/getup_arrow"
                      android:layout_centerVertical="true"
                      android:text="滑动解锁">
            </TextView>-->

            <!-- Lock OK icon  -->
            <!--<ImageView android:id="@+id/getup_finish_ico"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="80dip"
                       android:layout_toLeftOf="@+id/getup_arrow"
                       android:layout_centerVertical="true"
                       android:background="@drawable/done">
            </ImageView>-->
        </com.sports.iTrack.SliderRelativeLayout>
    </RelativeLayout>


</LinearLayout>



